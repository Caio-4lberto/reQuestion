<%- include ('./partials/header.ejs') %>

<body>
    <%- include ('./partials/navbar.ejs') %>
    
        <div class="container">
        
        <div class="title-main">
            <div class="title-page">
                <h1>Questions</h1>
            </div>
            <div class="">
                <a class="lik-ask" href="ask"> <button class="btn-ask">Ask</button> </a>
            </div>
        </div>
        <hr>

        
        <% questions.forEach(question => { %>
            <!--ID POR ATIVIDADE-->
            <form method="POST" action="/delete" >
                <input type="hidden" name="id" value="<%= question.id %>" >
            </form>							
        <br>
        <div class="card" id="question-group">
            <div class="card-body">
                <div class="row mb-3 d-flex align-items-center">
                    <div class="col-sm-10">
                        <h3> <%= question.title %> </h3>
                    </div>


                    
                    <div class="col-sm-2 mt-2 d-flex justify-content-end" id="icon-group">
                        <a class="icon-action" href=""><i class="fas fa-edit fa-lg"></i></a>
                        <a class="icon-action" href="/question/<%= question.id %>"><i class="fas fa-check-square fa-lg"></i> </a>
                        <a class="icon-action" href="/delete"><i class="fas fa-trash-alt fa-lg" ></i> </a>
                    </div>
                </div>
            </div>
        </div>
